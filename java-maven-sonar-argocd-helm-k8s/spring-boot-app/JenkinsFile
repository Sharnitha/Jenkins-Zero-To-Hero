
pipeline {
  agent any  // No Docker agent, run on any available agent
  
  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        git branch: 'main', url: 'https://github.com/Sharnitha/Jenkins-Zero-To-Hero.git'
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and create a JAR file
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
      }
    }

    stage('Converting Docker Image') {
      steps {
        sh 'ls -ltr'
        // Build the Docker image from the directory containing the Dockerfile
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t my-docker-image .'
      }
    }
   stage('Pushing Image') {
      environment {
               registryCredential = 'dockerhubcred'
           }
      steps{
        script {
          docker.withRegistry( 'https://registry.hub.docker.com', registryCredential ) {
            dockerImage.push("latest")
          }
        }
      }
    }
 }
}
